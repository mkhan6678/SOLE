@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@using ContosoCrafts.WebSite.Models
@model ContosoCrafts.WebSite.Pages.Product.UpdateModel

@{
    ViewData["Title"] = "Update Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<div class="container">
    <form method="post">

        <input id="Product_Id" name="Product.Id" type="hidden" value=@Model.Product.Id>

        <div class="form-group">
            <label class="control-label" for="Product_Title">Title</label>
            <input class="form-control valid" type="text" data-val="true" data-val-length="The Title should have a length of more than 1 and less than 35" data-val-length-max="35" data-val-length-min="1" id="Product_Title" maxlength="35" name="Product.Title" value="@Model.Product.Title" aria-describedby="Product_Title-error" aria-invalid="false" required placeholder="Enter Title">
            <span class="text-danger field-validation-valid" data-valmsg-for="Product.Title" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Description">Description</label>
            <input class="form-control" type="text" id="Product_Description" name="Product.Description" value="@Model.Product.Description" required placeholder="Enter Description" maxlength="30">
            <span class="text-danger field-validation-valid" data-valmsg-for="Product.Description" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Url">Url</label>
            <input class="form-control" type="url" id="Product_Url" name="Product.Url" value="@Model.Product.Url" required placeholder="Enter Url">
            <span class="text-danger field-validation-valid" data-valmsg-for="Product.Url" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Image">Image</label>
            <input class="form-control" type="text" id="Product_Image" name="Product.Image" value="@Model.Product.Image" required placeholder="Enter Image Link">
            <span class="text-danger field-validation-valid" data-valmsg-for="Product.Image" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Description">Price</label>
            <input class="form-control valid" type="text" data-val="true" id="Product_Price"  name="Product.Price" value="$@Model.Product.Price" required placeholder="Enter Price">
            <span class="text-danger" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Description">Seller Name</label>
            <input class="form-control valid" type="text" data-val="true" id="Product_Sellername" maxlength="10" name="Product.Sellername" value="@Model.Product.SellerName" aria-describedby="Product_Sellername-error" aria-invalid="false" required placeholder="Enter Seller Name">
            <span class="text-danger" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Description">Seller Email</label>
            <input class="form-control valid" type="email" data-val="true" id="Product_SellerEmail" maxlength="40" name="Product.SellerEmail" value="@Model.Product.SellerEmail" required placeholder="Enter Seller EMAIL ID">
            <span class="text-danger" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="Product_Description">Seller Contact</label>
            <input class="form-control" id="Product_Sellercontact" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="Product.Sellercontact" required value="@Model.Product.SellerContact" placeholder="Please Enter Seller Contact in <>-<>-<> format" maxlength="12">
            <span class="text-danger" data-valmsg-replace="true"></span>
        </div>

        <div class="form-group">
            <label class="control-label" for="AvailabilityStatus">Product Status</label>
            <select class="form-control" asp-items="Html.GetEnumSelectList<ProductStatusEnum>()" type="text" id="Product_AvailabilityStatus" name="Product.AvailabilityStatus" value="@Model.Product.AvailabilityStatus">
                <option selected="selected" value="">Please Select</option>
            </select>
            <span class="text-danger" data-valmsg-for="AvailabilityStatus" data-valmsg-replace="True"></span>
        </div>

        <br>
        <hr>
        <br>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save <i class="fa fa-floppy-o"></i></button>
        </div>
        <input name="__RequestVerificationToken" type="hidden" value="">
    </form>

</div>