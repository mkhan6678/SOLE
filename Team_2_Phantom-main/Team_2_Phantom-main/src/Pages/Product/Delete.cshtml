@page "{id}"
@using ContosoCrafts.WebSite.Services
@inject JsonFileProductService ProductService
@model ContosoCrafts.WebSite.Pages.Product.DeleteModel

@{
    ViewData["Title"] = "Delete Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container">
    <main role="main" class="pb-3">


        <h1>Delete Confirmation</h1>

        <div class="container">
            <form method="post" novalidate="novalidate">

                <input id="Product_Id" name="Product.Id" type="hidden" value=@Model.Product.Id>

                <div class="form-group">
                    <label class="control-label" for="Product_Title">Title</label>
                    <input class="form-control" disabled="" type="text" data-val="true" data-val-length="The Title should have a length of more than 1 and less than 33" data-val-length-max="33" data-val-length-min="1" id="Product_Title" maxlength="33" name="Product.Title" value="@Model.Product.Title">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Description">Description</label>
                    <input class="form-control" disabled="" type="text" id="Product_Description" name="Product.Description" value="Model.Product.Description">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Url">Url</label>
                    <input class="form-control" disabled="" type="text" id="Product_Url" name="Product.Url" value="@Model.Product.Url">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Image">Image</label>
                    <input class="form-control" disabled="" type="text" id="Product_Image" name="Product.Image" value="@Model.Product.Image">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Description">Price</label>
                    <input class="form-control" disabled="" type="text" id="Product_Price" name="Product.Price" value="$@Model.Product.Price">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Description">Seller Name</label>
                    <input class="form-control" disabled="" type="text" id="Product_Sellername" name="Product.Sellername" value="@Model.Product.SellerName">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Description">Seller Email</label>
                    <input class="form-control" disabled="" type="email" id="Product_SellerEmail" name="Product.SellerEmail" value="@Model.Product.SellerEmail">
                </div>

                <div class="form-group">
                    <label class="control-label" for="Product_Description">Seller Contact</label>
                    <input class="form-control" id="Product_Sellercontact" disabled="" type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" name="Product.Sellercontact" required value="@Model.Product.SellerContact" placeholder="Please Enter Seller Contact in <>-<>-<> format" maxlength="12">

                </div>


                <div class="form-group">

                    <button class="btn btn-primary">Confirm <i class="fa fa-trash-o"></i></button>
                </div>
                <input name="__RequestVerificationToken" type="hidden" value="">
            </form>

        </div>


    </main>
</div>