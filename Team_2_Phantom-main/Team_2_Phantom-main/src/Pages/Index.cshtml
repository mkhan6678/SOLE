@page
@using ContosoCrafts.WebSite.Components
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="search">
    <form method="get" class="search-form">
        <input class="form-control valid" asp-for="SearchString" placeholder="Type here to search products" />
        <button class="btnfc btn-success" type="submit">Filter</button>
    </form>
    <form method="get" class="reset-form">
        <button class="btnfc btn-danger" type="submit">Clear</button>
    </form>
</div>

@(await Html.RenderComponentAsync<ProductList>(RenderMode.ServerPrerendered, new { Products = Model.Products }))

<script src="_framework/blazor.server.js"></script>